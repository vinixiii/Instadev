<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://kit.fontawesome.com/86484b0d96.js" crossorigin="anonymous"></script>
    <link rel="icon" href="~/img/Instadev.ico" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    @if((ViewData["Title"].ToString() != "Login") && (ViewData["Title"].ToString() != "Cadastro"))
    {
        <header class="top">
            <div class="top-container">
                <a asp-area="" asp-controller="Home" asp-action="Index" title="Página home">
                    <img src="img/img-header/Instadev.svg" alt="logo Instadev">
                </a>
                <div class="search-container">
                    <div id="search">
                        <img src="img/img-header/Vector.svg" alt="Procurar" />
                        <input id="buscar" type="text" placeholder="Procurar" />
                    </div>
                </div>
                <nav>
                    <ul class="menu">
                        <li>
                            <a asp-area="" asp-controller="Feed" asp-action="Index" title="Feed">
                                <img src="img/img-header/home 1.svg" alt="Início">
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="" asp-action="" title="">
                                <img src="img/img-header/plane 1.svg" alt="Direct">
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="" asp-action="" title="">
                                <img src="img/img-header/compass 1.svg" alt="Pesquisar">
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="" asp-action="" title="">
                                <img src="img/img-header/heart 1.svg" alt="Notificações">
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Perfil" asp-action="Index" title="Perfil">
                                <img src="~/img/perfil/@ViewBag.UserLogado.Foto" alt="Perfil">
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>
    }

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    @if((ViewData["Title"].ToString() != "Login") && (ViewData["Title"].ToString() != "Cadastro"))
    {
        <footer class="rodape">
            <div class="rodape-container">
                <div class="campo">
                    <nav>
                        <ul>
                            <li><a href="#">Sobre</a></li>
                            <li><a href="#">Blog</a></li>
                            <li><a href="#">Carreiras</a></li>
                            <li><a href="#">Ajuda</a></li>
                            <li><a href="#">API</a></li>
                            <li><a href="#">Privacidade</a></li>
                            <li><a href="#">Termos</a></li>
                            <li><a href="#">Contas mais relevantes</a></li>
                            <li><a href="#">Hashtags</a></li>
                            <li><a href="#">Localizações</a></li>                
                        </ul>
                    </nav>
                </div>
                <div class="direitos">
                    <ul>
                        <li><a href="#">Português (Brasil)</a></li>
                        <li><a href="#">&copy; 2021 Instadev Grupo 6 - Todos os direitos reservados</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    }    

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/pesquisa.js" asp-append-version="true"></script>
    <script src="~/js/segue.js" asp-append-version="true"></script>
    <script src="~/js/curte.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
