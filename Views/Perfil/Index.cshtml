@{
    ViewData["Title"] = "Instadev G6 | Perfil";
}

<section id="info">
    <div class="info-container">
        <div class="info-content">
            <img src="~/img/@ViewBag.UserLogado.Foto" alt="foto de perfil">
            <div class="info-text">
                <div class="username">
                    <h1>@ViewBag.UserLogado.Username</h1>
                </div>
                <div class="info-numbers">
                    <p>0 publicações</p>
                    <p>128 seguindo</p>
                    <p>214 seguidores</p>
                </div>
                <div class="description">
                    <p><strong>@ViewBag.UserLogado.Nome</strong></p>
                    <div class="options">
                        <a asp-area="" asp-controller="EditarPerfil" asp-action="Index" title="Editar perfil">Editar perfil</a>
                        <a asp-area="" asp-controller="Login" asp-action="Deslogar" title="Sair">Sair</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="menu-posts">
    <div class="menu-profile">
        <div class="menu-text">
            <img src="./img/img-perfil/squares.svg" alt="">
            <p>Publicações</p>
        </div>
    </div>
</div>
<article id="posts">
    <div class="posts-container">
        <div class="posts-content">
            @foreach (Publicacao p in ViewBag.PublicacoesUser)
            {
                <div class="post-profile">
                    <img src="~/img/publicacoes/@p.Imagem" alt="">
                    <div class="post-info">
                        <div class="interaction">
                            <div class="user-info">
                                <img src="~/img/@ViewBag.UserLogado.Foto" alt="">
                                <div class="username-and-location">
                                    <h2>@ViewBag.UserLogado.Nome</h2>
                                    <p>Rio de Janeiro, Brazil</p>
                                </div>
                            </div>
                            <div class="like-and-comment">
                                <img id="1" src="./img/img-perfil/like.svg" alt="" onclick="curtir(1)">
                                <img src="./img/img-perfil/comment.svg" alt="">
                            </div>
                            <p>1954 curtidas</p>
                            <ul class="comments">
                                <li>
                                    <div class="comment">
                                        <div class="comments-text">
                                            <h3>fausto_silva</h3>
                                            <p>Esse cara é fera bixo</p>
                                        </div>
                                        <img id="2" src="./img/img-perfil/like.svg" alt="" onclick="curtir(2)">
                                    </div>
                                </li>
                                <li>
                                    <div class="comment">
                                        <div class="comments-text">
                                            <h3>yes_baby</h3>
                                            <p>thank you</p>
                                        </div>
                                        <img id="3" src="./img/img-perfil/like.svg" alt="" onclick="curtir(3)">
                                    </div>
                                </li>
                                <li>
                                    <div class="comment">
                                        <div class="comments-text">
                                            <h3>adriano_stark</h3>
                                            <p>Quando eu adormecer, vou sonhar com você. É sempre você.</p>
                                        </div>
                                        <img id="4" src="./img/img-perfil/like.svg" alt="" onclick="curtir(4)">
                                    </div>
                                </li>
                                <li>
                                    <div class="comment">
                                        <div class="comments-text">
                                            <h3>yes_baby</h3>
                                            <p>thank you</p>
                                        </div>
                                        <img id="5" src="./img/img-perfil/like.svg" alt="" onclick="curtir(5)">
                                    </div>
                                </li>
                            </ul>
                            <p id="view-all-comments">Ver todos os 585 comentários</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</article>